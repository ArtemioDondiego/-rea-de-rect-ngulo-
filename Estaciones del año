public class Mavenproject7 {

    public static void main(String[] args) {
       int mes;
        Scanner teclado = new Scanner(System.in);
        System.out.println("Ingresa un número de mes: ");
        mes= teclado.nextInt();
        switch(mes){
            case 3:
            case 4:
            case 5:
        System.out.println("Estas en Primavera: ");
        break;
            case 6:
            case 7:
            case 8:
        System.out.println("Estas en Verano: ");
        break;
            case 9:
            case 10:
            case 11:
        System.out.println("Estas en Otoño: ");
        break;
            case 12:
            case 1:
            case 2:     
        System.out.println("Estas en Invierno: ");
        break;
        
            default:
            System.out.println("Mes y estacion no existe" );    
        }
    }  
}
