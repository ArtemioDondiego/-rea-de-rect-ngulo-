Pulic class Promedio {
    Public static void main (String[] args) {
      double numero1, numero2, nuemro3, promedio;
       Scanner teclado = new Scanner(System.in);
       System.ou.println("Ingresa el priemer número: ")
       numero1 = teclado.nextDouble();
       System.ou.println("Ingresa el segundo número: ")
