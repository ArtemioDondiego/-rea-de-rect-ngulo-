public class Mavenproject37 {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int numero;

        do {
            System.out.print("Ingresa un número entero positivo: ");
            numero = sc.nextInt();
            if (numero <= 0) {
                System.out.println("Por favor, ingresa un número mayor que cero.");
            }
        } while (numero <= 0);

        System.out.println("\nCuadrados de los números del 1 al " + numero + ":");

        int i = 1;
        do {
            int cuadrado = i * i;
            System.out.println(i + " al cuadrado = " + cuadrado);
            i++;
        } while (i <= numero);

        sc.close();
    }
}
